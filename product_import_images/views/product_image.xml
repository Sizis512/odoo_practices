<?xml version="1.0"?>
<odoo>

    <record id="images_inherited_view" model="ir.ui.view">
        <field name="name">Change Displayed Image Name</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//kanban/templates//div//div/field" position="replace">
                <field class="oe_kanban_details" name="filename"/>
                <button type="object"
                        name="do_change_main_image"
                        string="Change main image">
                        Select
                </button>
                <button type="object"
                        name="do_delete_image"
                        string="Delete main image">
                        Delete
                </button>
            </xpath>

      </field>
    </record>

</odoo>