<?xml version="1.0"?>
<odoo>

    <act_window id="action_product_import_images"
                name="Import Product Images"
                res_model="product.import.images"
                view_mode="form"
                target="new"
    />
    <menuitem id="menu_import_images"
              name="Import Images"
              sequence="10"
              parent="website_sale.menu_product_settings"
              action="product_import_images.action_product_import_images"
    />

    <record id="Import Product Images" model="ir.ui.view">
        <field name="name">Import Product Images</field>
        <field name="model">product.import.images</field>
        <field name="arch" type="xml">

            <form>
                <field name="folder_bin" filename="folder_name" string="Select ZIP folder"/>
                <field name="folder_name" invisible="1"/>

                <footer>
                    <button type="object" name="do_import_images"
                            string="Import Images" class="oe_highlight"
                    />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
